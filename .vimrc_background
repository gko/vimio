if has('nvim')
    colo melange
    hi NoBackground guibg=NONE
else
    colo zenbones
endif

hi link typescriptParens NoBackground

if has('nvim')
    " highlight Statement cterm=italic gui=italic
    " highlight Comment cterm=italic gui=italic
endif
