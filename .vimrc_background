set background=dark

" let g:gruvbox_contrast_dark="soft"
" let g:gruvbox_contrast_light="soft"
" hi Visual cterm=none gui=none ctermbg=19
" colorscheme gruvbox

" let g:sonokai_style = 'andromeda'
" let g:sonokai_enable_italic = 1
" let g:sonokai_disable_italic_comment = 1
" let g:airline_theme = 'sonokai'
" colorscheme sonokai

" colorscheme nord
" colorscheme iceberg

let supportsTrueColor = $COLORTERM == "truecolor" || $COLORTERM == "24bit"
if has("termguicolors") && supportsTrueColor
    let g:airline_theme = 'transparent'

    let g:material_terminal_italics = 1

    let g:material_theme_style = 'palenight'
    colorscheme material
else
    colorscheme base16-material-palenight
    " https://github.com/chriskempson/base16-vim/pull/210
    hi Statement term=bold ctermfg=5 gui=bold guifg=#C792EA
endif
